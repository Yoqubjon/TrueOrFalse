                <TextView
                    android:id="@+id/TextView11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/level_results_default" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
